<Window x:Class="Torpedo_Game.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Torpedo_Game"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        x:Name="mainWindow">
    <StackPanel>
        <Button Content="Player vs Player" Name="PvsPButton" Click="PvsPButton_Click" ClickMode="Press"/>
        <Button Content="Player vs AI" Name="PvsAIButton" Click="PvsAIButton_Click" ClickMode="Press"/>
        <Button Content="Scores" Name="scoresButton" Click="scoresButton_Click" ClickMode="Press"/>
    </StackPanel>
</Window>
